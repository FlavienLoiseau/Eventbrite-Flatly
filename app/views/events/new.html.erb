<div class="container">

  <% if @event.errors.any? %>
    <% @event.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert">
        <%= message %>
      </div>
    <% end %>
  <% end %>

  <div class="row">
    <div class="mx-auto" style="width: 600px;">
      <%= form_for @event, html: { class: "form-signin" } do |f| %>
        <h1 class="my-4 font-weight-normal text-center">Créer un événement</h1>
        <div class="form-group">
          <%= f.label :title, "Titre de l'événement" %><br>
          <%= f.text_field :title, autofocus: true, class: "form-control", placeholder: "entre 5 et 140 caractères" %>
        </div>
        <div class="form-group">
          <%= f.label :start_date, "Date et heure de début" %><br>
          <%= f.datetime_select :start_date, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :duration, "Durée de l'événement" %><br>
          <%= f.text_field :duration, class: "form-control", placeholder: "en minutes"%>
        </div>
        <div class="form-group">
          <%= f.label :description, "Description de l'événement" %><br>
          <%= f.text_area :description, class: "form-control", placeholder: "entre 20 et 1000 caractères" %>
        </div>
        <div class="form-group">
          <%= f.label :price, "Prix de l'événement" %><br>
          <%= f.text_field :price, class: "form-control", placeholder: "entre 1 et 1000 (€)" %>
        </div>
        <div class="form-group">
          <%= f.label :location, "Lieu de l'événement" %><br>
          <%= f.text_field :location, class: "form-control" %>
        </div>
        <div class="my-4 actions">
          <%= f.submit "Créer", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>

</div>