<picture>
  <img src="https://www.happn.com/public/images/home/home-stories-static.jpg" class="img-fluid" alt="Home Picture">
</picture>

<div class="container">

  <h1 class="my-4 font-weight-normal text-center">Découvre les évènements à venir</h4>

  <div class="row justify-content-center">
    <% @events.each do |event| %>
      <div class="card m-3" style="width: 18rem;">
        <div class="card-header text-center">
          <h5><%= event.title %></h5>
        </div>
        <div class="card-body text-sm-left">
          <ul class="list-unstyled">
            <li>Administrateur : <%= event.admin.first_name %> <%= event.admin.last_name %></li>
            <li>Lieu : <%= event.location %></li>
            <li>Date : <%= event.start_date.strftime("le %-d/%-m/%Y à %lh%H") %></li>
          </ul>
          <%= link_to "Page de l'événement", event_path(event.id), :class => "btn btn-block btn-outline-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>