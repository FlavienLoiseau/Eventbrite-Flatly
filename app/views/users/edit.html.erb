<div class="container">
  <%= form_for @user, html: { class: "form-signin my-4" } do |f| %>
    <h1 class="font-weight-normal text-center">Editer mon profil</h1>
    <div class="form-group my-4 text-left">
      <div class="form-group-item my-2">
        <%= f.label :first_name, "Prénom" %><br />
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group-item my-2">
        <%= f.label :last_name, "Nom de famille" %><br />
        <%= f.text_field:last_name, class: "form-control" %>
      </div>
      <div class="form-group-item my-2">
        <%= f.label :email, "Email" %><br />
        <%= f.text_field:email, class: "form-control" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Mettre à jour", class: "btn btn-block btn-outline-success" %>
    </div>
    <%= link_to "Modifier mon mot de passe", edit_user_registration_path, :class => "btn btn-block btn-outline-danger" %>
  <% end %>
</div>